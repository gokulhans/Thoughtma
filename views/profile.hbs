<form  class="bot-div" action="/upload" method="post" enctype="multipart/form-data">
<input id="file" onchange="viewImage(event)" type="file" name="image" hidden>
<input type="text" name="imgurl" id="imgurl" > 
<label for="file">+</label>
<button type="submit">=</button>
</form>

<input type="text" name="imgurldev" value="sdjkfbdfsdh" id="imgurldev" > 

<script>
    function viewImage(event){
        document.getElementById('imgurl').value = URL.createObjectURL(event.target.files[0])
        document.getElementById('imgurldev').value = URL.createObjectURL(event.target.files[0])
        document.getElementById('img').src = URL.createObjectURL(event.target.files[0])
    }
</script>

{{#each blogs}}
<div class="blog-div">
    <img class="blog-img"
        src="https://images.pexels.com/photos/2823459/pexels-photo-2823459.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500">
    <div class="text">
        <a href="/users/blog/{{this._id}}">
            <h5>{{this.title}}</h5>
        </a>
        <div class="author">
            <img src="https://images.pexels.com/photos/4965133/pexels-photo-4965133.jpeg?auto=compress&cs=tinysrgb&h=650&w=940"
                alt="image">
            <h4> {{this.name}}</h4>
            <a style="margin-left: 10px;" href="/users/delete/{{this._id}}">O</a>
        </div>
        <p>{{this.blog}}</p>
    </div>
</div>
{{/each}}





