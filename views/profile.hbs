<div class="home">

    <div class="row">
        <h3 class="welcome">welcome {{user.name}},</h3>
        {{#if user}}
        <a class="btn logout btn-danger" href="/users/logout">[></a>
        {{/if}}
    </div>

    <div class="edit">
        <div class="row name">
            <h1>Name: </h1>
            <input type="text" class="name-input" value="{{user.name}}">
        </div>

        <div class="row about">
            <h1>About: </h1>
            <textarea class="about-input" maxlength="60" type="text" placeholder="add something about you.."
                value="{{user.about}}" rows="3"></textarea>
        </div>
        <a href="/" class="update btn btn-success"> > </a>
        <img class="" id="img" src="/images/{{user._id}}.jpg">

    </div>

</div>


<form class="bot-div" action="/upload" method="post" enctype="multipart/form-data">
    <input type="text" value="{{user._id}}" name="userid" hidden>
    <input id="file" onchange="form.submit()" type="file" name="image" hidden>
    <label for="file">+</label>
</form>




