<div class="home">
    <div class="row">
        <h3 class="welcome">welcome {{user.name}},</h3>
        {{#if user}}
        <a class="btn logout btn-danger" href="/users/logout">[></a>
        {{/if}}
    </div>
    <div class="edit">
        <div class="row name">
            <h1>Name: </h1>
            <input type="text" class="name-input" value="{{user.name}}">
        </div>
        <div class="row about">
            <h1>About: </h1>
            <textarea class="about-input" maxlength="60" type="text" placeholder="add something about you.."
                value="{{user.about}}" rows="3"></textarea>
        </div>
        <a href="/" class="update btn btn-success"> > </a>
        <img class="" id="img"
            src="https://images.pexels.com/photos/4965133/pexels-photo-4965133.jpeg?auto=compress&cs=tinysrgb&h=650&w=940">
    </div>
</div>

