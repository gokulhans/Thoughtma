{{#each blogs}}
<div class="blog-div">
    <img class="blog-img"
        src="https://images.unsplash.com/photo-1612874470096-d93a610de87b?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=687&q=80">
    <div class="text">
        <a href="/users/blog/{{this._id}}">
            <h5>{{this.title}}</h5>
        </a>
        <div class="author">
            <img src="/images/{{this.userid}}.jpg" alt="image">
            <h4> {{this.name}}</h4>
            <a style="margin-left: 10px;" href="/users/delete/{{this._id}}">O</a>
        </div>
    </div>
</div>
{{/each}}





