        margin-right: 10px;
        object-fit: cover;
    }

    .text h4 {
        font-size: 10px;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        color: rgb(255, 255, 255);

    }

    .text p {
        font-family: cursive;
        font-size: 10px;
        color: bisque;
        margin-top: 5px;
    }

    .text h5 {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
